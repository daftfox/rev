{
  "name": "rev-service",
  "version": "0.0.1",
  "description": "A webservice for managing and directing firmata-enabled microcontrollers",
  "main": "./dist/index.js",
  "scripts": {
    "postinstall": "tsc",
    "test": "mocha -r ts-node/register test/**/*.spec.ts --exit",
    "testWithCoverage": "nyc -r lcov -e .ts -x \"*.spec.ts\" mocha -r ts-node/register test/**/*.spec.ts --exit && nyc report",
    "start": "tsc && node ./dist/index.js --serial --ethernet",
    "build": "tsc"
  },
  "bin": {
    "rev-service": "./dist/index.js"
  },
  "engines": {
    "node": "*"
  },
  "keywords": [
    "firmata",
    "web",
    "service",
    "manager"
  ],
  "author": {
    "name": "Timothy Claassens",
    "email": "tim.claassens@gmail.com",
    "url": "https://timothy.fyi"
  },
  "license": "ISC",
  "dependencies": {
    "@types/firmata": "^0.19.0",
    "@types/node": "^10.12.12",
    "@types/node-fetch": "^2.3.2",
    "@types/socket.io": "^2.1.2",
    "@types/websocket": "0.0.40",
    "args": "^5.0.0",
    "chalk": "^2.4.1",
    "command-line-usage": "^5.0.5",
    "eslint": "^5.10.0",
    "etherport": "git://github.com/daftfox/etherport.git",
    "firmata": "^2.0.0",
    "json2typescript": "^1.0.6",
    "moment": "^2.23.0",
    "serialport": "^7.1.0",
    "supports-color": "^5.5.0",
    "typescript": "^3.2.2",
    "websocket": "^1.0.28"
    "longjohn": "^0.2.12",
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "mocha": "^6.1.3",
    "nyc": "^13.3.0",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.0.3"
    "promise": "^8.0.3",
  }
}
