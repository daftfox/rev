{
    "name": "rev-service",
    "version": "0.0.5-4",
    "description": "A webservice for controlling and monitoring micro-controllers",
    "keywords": [
        "firmata",
        "web",
        "realtime",
        "wireless",
        "serial",
        "service",
        "manager",
        "rev"
    ],
    "author": {
        "name": "Timothy Claassens",
        "email": "tim.claassens@gmail.com",
        "url": "https://timothy.fyi"
    },
    "license": "GPL-3.0-only",
    "homepage": "https://github.com/daftfox/rev-service#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/daftfox/rev-service"
    },
    "bugs": "https://github.com/daftfox/rev-service/issues",
    "main": "./dist/index.js",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "test": "jest",
        "start": "tsc && node ./dist/index.js --ethernet",
        "build": "tsc",
        "lint": "tslint --fix -p tsconfig.json",
        "lint:check": "tslint -p tsconfig.json",
        "format": "prettier --write \"**/*.{ts,json,md}\"",
        "format:check": "prettier --list-different \"**/*.{ts,json,md}\"",
        "version": "npm run format && npm run lint && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm run format"
        }
    },
    "bin": {
        "rev": "./dist/index.js"
    },
    "engines": {
        "node": "11.14"
    },
    "dependencies": {
        "@types/firmata": "^0.19.1",
        "@types/node": "^10.17.4",
        "@types/node-fetch": "^2.5.3",
        "@types/websocket": "0.0.40",
        "args": "^5.0.1",
        "chalk": "^2.4.2",
        "firmata": "^2.0.0",
        "moment": "^2.24.0",
        "mysql2": "^2.0.0",
        "sequelize": "^5.21.2",
        "sequelize-typescript": "^1.0.0",
        "serialport": "^7.1.0",
        "sqlite3": "^4.1.0",
        "uuid": "^3.3.3",
        "websocket": "^1.0.30"
    },
    "devDependencies": {
        "@types/jest": "^24.0.22",
        "husky": "^3.0.9",
        "jest": "^24.9.0",
        "jest-html-reporter": "^2.6.2",
        "jest-junit": "^9.0.0",
        "prettier": "^1.18.2",
        "promise": "^8.0.3",
        "reflect-metadata": "^0.1.13",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.0.3",
        "tslint": "^5.20.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.2.2"
    }
}
